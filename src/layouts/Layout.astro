---
// Supports weights 200-700
import "@fontsource-variable/oswald";
// Supports weights 400-700
import "@fontsource-variable/kode-mono";
import "../styles/form.css";

import SEO from "../components/SEO.astro";

interface Props {
  title: string;
  description: string;
  keywords: string;
  canonical: string;
  robots: string;
  img: string;
}

const { title, description, keywords, canonical, robots, img } = Astro.props;
---

<!doctype html>
<html lang="es" class="lenis scroll-pt-[89px]">
  <head>
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      canonical={canonical}
      robots={robots}
      img={img}
    />
  </head>
  <body
    class="bg-cyan-950 font-mono text-base text-green-50"
  >
    <slot />
    <script src="../scripts/main.js"></script>
    <style is:global>
      /** Scrollbar */
      ::-webkit-scrollbar {
        @apply w-2;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        @apply bg-transparent;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        @apply bg-green-400;
      }

      *,
      *::before,
      *::after {
        @apply focus-visible:outline-green-50;
      }

      /** Reset */
      svg {
        @apply max-w-full h-auto;
      }

      /** Animations */
      .interface {
        opacity: 0;
        animation: fadeIn 1000ms ease-in-out forwards 1000ms;
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      @keyframes fadeOut {
        to {
          opacity: 0;
        }
      }

      @keyframes fadeInY {
        to {
          opacity: 1;
          transform: translatey(0);
        }
      }

      @keyframes slideRight {
        to {
          transform: translateX(0);
        }
      }

      /** Glass box */
      .glass h2,
      .glass h3,
      .glass p,
      .glass ul {
        @apply mb-4;
      }

      .glass li:before {
        content: "> ";
      }
    </style>
  </body>
</html>
