---
interface Props {
  id?: string;
  href: string;
  text: string;
  animated?: boolean;
}

const { id, href, text, animated } = Astro.props;
---

<a
id={id}
  class:list={[
    "font-medium border border-white/10 backdrop-blur px-4 rounded-full h-10 inline-flex items-center",
    { animated: animated },
  ]}
  href={href}
  title={text}
  rel="noopener">{text}</a
>

<style>
  .animated {
    opacity: 0;
    animation: fadeIn 1000ms ease-in-out forwards 2000ms;
  }
</style>
