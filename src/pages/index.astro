---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Title from "../components/Title.astro";
import History from "../components/History.astro";
import Main from "../components/Main.astro";
import Form from "../components/Form.astro";
---

<Layout title="Welcome to Astro.">
  <img
    id="background"
    src="/background.webp"
    alt="Background"
    class="w-screen h-dvh object-cover object-top fixed top-0 left-0 -z-10"
  />
  <img
    id="girl"
    src="/girl.webp"
    alt="Girl"
    class="w-3/4 sm:w-1/2 h-dvh object-contain object-bottom drop-shadow-big fixed top-0 left-0 pointer-events-none lg:z-10"
  />

  <Hero />

  <Title />

  <History />

  <Main />

  <Form />

</Layout>

<style>
  #background {
    opacity: 0;
    animation: fadeIn 1000ms ease-in-out forwards 1000ms;
  }

  #girl {
    transform: translateX(-100%);
    animation: slideRight 1000ms ease-in-out forwards 1000ms;
  }
</style>
