---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import Title from "../components/Title.astro";
import Storytelling from "../components/Srotytelling.astro";
import Main from "../components/Main.astro";
import FAQs from "../components/FAQs.astro";
import Form from "../components/Form.astro";
---

<Layout
  title="Future Genius - Eco Mission | IMMUNE Technology Institute"
  description="Description"
  keywords="future genius, immune"
  canonical="https://futuregenius.immune.institute/"
  robots="index, follow"
  img="https://futuregenius.immune.institute/share.webp"
>
  <Nav />
  <Hero />
  <Title />
  <Storytelling />
  <Main />
  <FAQs />
  <Form />

  <img
    id="girl"
    class="w-3/5 lg:w-1/2 h-3/4 lg:h-full object-contain object-left-bottom drop-shadow-big sticky bottom-0 pointer-events-none z-10"
    src="/girl.webp"
    alt="girl"
  />
  <img
    id="background"
    class="w-screen h-[110vh] lg:h-screen object-cover fixed top-0 left-0 pointer-events-none -z-10"
    src="/background.webp"
    alt="background"
  />
</Layout>

<style>
  #girl {
    transform: translateX(-100%);
    animation: slideRight 1000ms ease-in-out forwards 1000ms;
  }

  #background {
    opacity: 0;
    animation: fadeIn 1000ms ease-in-out forwards 1000ms;
  }
</style>